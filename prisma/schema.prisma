generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//Relacion de uno a mucho 
model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  name     String
  lastName String?
  posts    Post[]
  profiles Profile?
}

model Profile {
  id     Int  @id @default(autoincrement())
  userId Int  @unique //Necesario para el one to one
  user   User @relation(fields: [userId], references: [id])
}

model Post {
  id       Int     @id @default(autoincrement())
  title    String
  content  String?
  authorId Int
  //Lo que decimos aqui es que el authorId va a estar relacionado con el id del User
  //Esto es solo para prisma no se refleja en la db
  author   User    @relation(fields: [authorId], references: [id])
}
